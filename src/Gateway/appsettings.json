{
  "App": {
    "Name": "app-gateway"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Clusters": {
      "production-svc-cluster": {
        "Destinations": {
          "production-svc-cluster/destination1": {
            "Address": "http://localhost:5002/"
          }
        }
      },
      "sale-svc-cluster": {
        "Destinations": {
          "sale-svc-cluster/destination1": {
            "Address": "http://localhost:5003/"
          }
        }
      }
    },
    "Routes": [
      {
        "RouteId": "production",
        "ClusterId": "production-svc-cluster",
        "Match": {
          "path": "/{**catchall}"
        },
        "Transforms": [
          {
            "X-Forwarded": "proto,host,for,pathbase",
            "Append": "true",
            "Prefix": "X-Forwarded-"
          },

          { "RequestHeadersCopy": "true" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      {
        "RouteId": "sale",
        "ClusterId": "sale-svc-cluster",
        "Match": {
          "Methods": [ "GET", "POST" ],
          "Path": "/s/products"
        },
        "Transforms": [
          {
            "X-Forwarded": "proto,host,for,pathbase",
            "Append": "true",
            "Prefix": "X-Forwarded-"
          },

          { "PathSet": "/weatherforecast" },

          { "RequestHeadersCopy": "true" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      }
    ]
  }
}
